# Environment configuration for AutoQiita
# Copy this file to .env and fill in your values

# Qiita API access token (required)
# Get from: https://qiita.com/settings/applications
QIITA_ACCESS_TOKEN=your_qiita_access_token_here

# Workspace path to monitor (optional, defaults to current directory)
WORKSPACE_PATH=/path/to/your/workspace

# MCP Server settings
MCP_HOST=localhost
MCP_PORT=8000

# Auto-save settings
AUTO_SAVE_ENABLED=true
SAVE_DELAY_SECONDS=5

# Security settings
SECURITY_SCAN_ENABLED=true
SECURITY_BLOCK_CRITICAL=true
SECURITY_CONFIG_FILE=config/security_rules.json

# Draft title prefix
DRAFT_PREFIX=[AutoSave]