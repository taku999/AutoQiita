{
  "name": "autoqiita-extension",
  "displayName": "AutoQiita",
  "description": "Automatically save VSCode content to Qiita drafts",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoqiita.startMonitoring",
        "title": "Start AutoQiita Monitoring"
      },
      {
        "command": "autoqiita.stopMonitoring", 
        "title": "Stop AutoQiita Monitoring"
      },
      {
        "command": "autoqiita.saveCurrentFile",
        "title": "Save Current File to Qiita"
      },
      {
        "command": "autoqiita.showStatus",
        "title": "Show AutoQiita Status"
      }
    ],
    "configuration": {
      "title": "AutoQiita",
      "properties": {
        "autoqiita.mcpServerUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "URL of the AutoQiita MCP server"
        },
        "autoqiita.autoSaveEnabled": {
          "type": "boolean", 
          "default": true,
          "description": "Enable automatic saving to Qiita"
        },
        "autoqiita.saveDelay": {
          "type": "number",
          "default": 5,
          "description": "Delay in seconds before auto-saving"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}